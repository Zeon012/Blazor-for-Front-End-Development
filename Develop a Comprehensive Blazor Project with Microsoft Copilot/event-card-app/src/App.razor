@namespace event_card_app
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components
@using event_card_app.Components

<div class="app-header">
    <h1>Welcome to the Event Card App</h1>
    <nav>
        <a href="/events">Events</a>
        <a href="/register">Register</a>
        <a href="/attendance">Attendance</a>
    </nav>
</div>

<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(event_card_app.Components.MainLayout)" />
    </Found>
    <NotFound>
        <h1>Page not found</h1>
        <a href="/events">Go to Event List</a>
    </NotFound>
</Router>